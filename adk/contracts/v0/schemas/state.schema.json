{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://adk.contracts/v0/schemas/state.schema.json",
    "title": "State Machine Instance",
    "type": "object",
    "required": [
        "current_state",
        "history"
    ],
    "properties": {
        "current_state": {
            "type": "string",
            "description": "Current enumerated state (e.g. DRAFT, FINALIZED)"
        },
        "allowed_transitions": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Transitions valid from current_state"
        },
        "history": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "from",
                    "to",
                    "timestamp"
                ],
                "properties": {
                    "from": {
                        "type": "string"
                    },
                    "to": {
                        "type": "string"
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "actor": {
                        "type": "string"
                    }
                }
            }
        },
        "finalized": {
            "type": "boolean",
            "default": false
        }
    }
}