{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://adk.contracts/v0/schemas/tool_policy.schema.json",
    "title": "Tool Policy",
    "type": "object",
    "required": [
        "version",
        "policy"
    ],
    "properties": {
        "version": {
            "type": "string"
        },
        "policy": {
            "type": "object",
            "properties": {
                "allowlist": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "denylist": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "default_action": {
                    "type": "string",
                    "enum": [
                        "allow",
                        "deny"
                    ],
                    "default": "deny"
                }
            }
        }
    }
}