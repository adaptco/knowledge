{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://adk.contracts/v0/schemas/gate_result.schema.json",
    "title": "Gate Result",
    "type": "object",
    "required": [
        "gate_name",
        "status",
        "timestamp"
    ],
    "properties": {
        "gate_name": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "enum": [
                "pass",
                "fail",
                "warn",
                "skipped"
            ]
        },
        "severity": {
            "type": "string",
            "enum": [
                "low",
                "medium",
                "high",
                "critical"
            ],
            "default": "high"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "reasons": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "evidence_refs": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}