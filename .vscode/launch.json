{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run create-jest",
            "runtimeExecutable": "create-jest",
            "cwd": "${workspaceFolder}",
            "args": []
        },
        {
            "name": "Containers: Python - Fastapi",
