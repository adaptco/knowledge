{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://docling.contracts/v1/chunk.embedding.v1.json",
    "title": "Chunk Embedding",
    "type": "object",
    "required": [
        "id",
        "doc_id",
        "chunk_index",
        "text",
        "embedding",
        "embedded_at"
    ],
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique chunk ID (doc_id + chunk_index hash)"
        },
        "doc_id": {
            "type": "string",
            "description": "Reference to parent normalized document"
        },
        "chunk_index": {
            "type": "integer",
            "description": "Zero-based index of this chunk within the document"
        },
        "text": {
            "type": "string",
            "description": "The text content of this chunk"
        },
        "embedding": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "description": "Vector embedding (e.g., 384 or 768 dimensions)"
        },
        "metadata": {
            "type": "object",
            "properties": {
                "model": {
                    "type": "string"
                },
                "start_char": {
                    "type": "integer"
                },
                "end_char": {
                    "type": "integer"
                }
            }
        },
        "embedded_at": {
            "type": "string",
            "format": "date-time"
        }
    }
}